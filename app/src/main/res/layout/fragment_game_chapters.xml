<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content">

    <TextView
        android:id="@+id/engcardsGameTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Engcards Game"
        android:textColor="@android:color/black"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chaptersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/engcardsGameTextview">

    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/playEngcardsButton"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/chaptersRecyclerView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back"
        android:drawableRight="@drawable/ic_yellow_play_button"
        android:text="Engcards Oyununu oyna"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mainAppColor"
        android:textSize="10sp" />


</RelativeLayout>


