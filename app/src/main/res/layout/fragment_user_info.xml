<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userAvatarImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/userAvatarImage"
            android:layout_toRightOf="@id/userAvatarImage"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userNumberOfLearnedCardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 of 25000 numbers of cards learned"
            android:layout_below="@+id/userName"
            android:layout_toEndOf="@id/userAvatarImage"
            android:layout_toRightOf="@id/userAvatarImage"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/userProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_below="@+id/userNumberOfLearnedCardTextView"
            android:layout_toEndOf="@id/userAvatarImage"
            android:layout_toRightOf="@id/userAvatarImage" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
